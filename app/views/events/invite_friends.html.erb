  <%= render 'layouts/header' %>

    <p style="color: red"><%= flash[:notice] %></p>
  <% if flash[:notice] && flash[:notice].match("is not a member") %>
      <%= form_for @invitation do |f| %>
      <div>
        <%= f.label :name %><br/>
        <%= f.text_field :name %>
      </div>

      <div>
        <%= f.label :email %><br/>
        <%= f.text_field :email, value: "#{flash[:notice].split(" ")[0]}" %>
      </div>

      <div>
        <%= f.label :message %><br/>
        <%= f.text_area :message, value: "#{@user.name} has invited you to #{@event.name}. This event starts on #{@event.start_date} and ends on #{@event.end_date}. Head to our website to see the details!" %>
      </div>

      <div>
        <%= f.submit "Invite" %>
      </div>
    <% end %>

  <% else %>

    <% if @role.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@role.errors.count, "error") %> prohibited this event from being saved:</h2>

        <ul>
        <% @role.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for [@event, @user, @role], url: event_new_friend_path(event_id: @event.id) do |f| %>
      <%= f.fields_for @user do |user|%>
        <%= user.label(:email) %>
        <%= user.text_field :email, :value => nil, :placeholder => "yourname@email.com" %>
      <% end %>
    <%= f.radio_button :permission, :organizer %> Organizer?
    <%= f.radio_button :permission, :friend %> Friend?
    <%= f.submit "Invite"%>
  <% end %>

<% end %>

