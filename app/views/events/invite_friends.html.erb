<% form_for ([@event, @role]), url: event_new_friend_path(event_id: @event.id) do |f| %>
  <%= f.label(:email) %>
  <%= f.text_field(:email) %>
  <%= f.label(:start_date) %>
  <%= f.date_field(:start_date) %>
  <%= f.label(:end_date) %>
  <%= f.date_field(:end_date) %>
  <%= f.radio_button :role, :organizer %> Organizer?
  <%= f.radio_button :role, :checked => :friend %> Friend?
  <%= f.submit %>
<% end %>
