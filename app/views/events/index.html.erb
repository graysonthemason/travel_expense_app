<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Users title</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Location</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.users_title %></td>
        <td><%= event.start_date %></td>
        <td><%= event.end_date %></td>
        <td><%= event.location %></td>
        <td><%= event.image %></td>
        <td><%= link_to 'Show', user_event_path(id: event.id) %></td>
        <td><%= link_to 'Edit', edit_user_event_path(id: event.id) %></td>
        <td><%= link_to 'Destroy', user_event_path(id: event.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


