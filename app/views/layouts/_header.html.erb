<header>
  <span class="logo"><%= link_to("Split.it", user_path(id: session.id)) %></span>
  <a href="/users/<%=current_user.id%>">
  <img class="header_image" src="<%if current_user.image != "" %><%= current_user.image %><% else %>http://i.imgur.com/0zJlY5J.jpg?1<% end %>" width=30px height=30px /></a>
  <span class="logout"><%= link_to("Logout", session_path, method: :delete) %></span>
  <span class="logout"><%= link_to 'New Event', new_user_event_path(current_user.id) %></span>
  <% if current_user.is_admin? %>
    <span class="admin">Admin</span>
    <span class="admin_a"><%= link_to('Users', users_path) %></span>
  <% end %>

</header>


