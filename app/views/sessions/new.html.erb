<section>
  <div class= "strong">Welcome to Travel App!</div>
  <div class="form">
  <p>Login</p>
  <div class="login">
    <%= form_tag(session_path) do %>
      <%= label_tag :email  %><br/>
      <%= text_field_tag :email %><br/>
      <%= label_tag :password %><br/>
      <%= password_field_tag :password %><br/>
      <%= submit_tag('Login') %>
    <% end %>
    <p style="color: red"><%= flash[:error] %></p>
  </div>
	<span class="site-buttons">
		<p><%= link_to('Sign up', new_user_path) %>
	</span>
</div>
</section>
